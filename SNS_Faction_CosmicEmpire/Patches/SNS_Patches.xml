<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="SNS_Sniper_GenI" or defName="SNS_Rifle_GenI"]</xpath>
                <value>
                    <weaponTags><li>SpacerGun</li></weaponTags>
                </value>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="SNS_Rifle_GenII" or defName="SNS_Pistol_GenII" or defName="SNS_Sniper_GenII"]</xpath>
                <value>
                    <weaponTags><li>SNS_GenII</li></weaponTags>
                </value>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="SNS_CosmicLance"]</xpath>
                <value>
                    <weaponTags><li>SNS_CosmicLance</li></weaponTags>
                </value>
            </li>

            <li Class="PatchOperationAdd">
                <xpath>Defs/ThingDef[defName="SNS_Rifle_GenIII"]</xpath>
                <value>
                    <weaponTags><li>SNS_GenIII</li></weaponTags>
                </value>
            </li>

            <li Class="PatchOperationReplace">
                <xpath>Defs/ThingDef[@Name="ApparelCosmicPowerArmorBase"]/generateCommonality</xpath>
                <value>
                    <generateCommonality>0.01</generateCommonality>
                </value>
            </li>

        </operations>
    </Operation>
</Patch>